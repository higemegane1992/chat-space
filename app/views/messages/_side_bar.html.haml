.sidebar
  .sidebar__header
    .sidebar__header__title
      %p.sidebar__header__title__name
        = current_user.name
      .sidebar__header__title__links
        = link_to new_group_path, class: "sidebar__header__title__links__link sidebar__header__title__links__link--margin" do
          = icon('far', 'edit',  class: "sidebar__header__title__links_link__icon")
          %span<>
        = link_to edit_user_path(current_user), class: "sidebar__header__title__links__link" do
          = icon('fas', 'cog',  class: "sidebar__header__title__links_link__icon")
  .sidebar__body
    - current_user.groups.each do |group|
      .sidebar__body__group
        %p.sidebar__body__group__name
          = group.name
        %p.sidebar__body__group__message
          まだメッセージはありません